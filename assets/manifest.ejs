{
    "manifest_version": 2,
    "name": "<%= name %>",
    "description": "<%= description %>",
    "version": "<%= version %>",
    "permissions": [
        "webRequest",
        "webRequestBlocking",
        "*://*.reddit.com/*",
        "tabs",
        "storage",
        "notifications"
    ],
    "content_scripts": [
        {
            "run_at": "document_start",
            "matches": ["*://*.reddit.com/*"],
            "css": ["content.css"],
            "js": ["content.bundle.js"]
        }
    ],
    "icons": {
        "16": "img/16.png",
        "48": "img/48.png",
        "96": "img/96.png",
        "128": "img/128.png"
    },
    "content_security_policy": "img-src 'self' http://ecx.images-amazon.com/; script-src 'self' 'unsafe-eval'; object-src 'self'"
}