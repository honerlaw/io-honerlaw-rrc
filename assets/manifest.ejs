{
    "manifest_version": 2,
    "name": "<%= name %>",
    "description": "<%= description %>",
    "version": "<%= version %>",
    "permissions": [
        "webRequest",
        "webRequestBlocking",
        "*://*.reddit.com/*",
        "tabs",
        "storage",
        "notifications"
    ],
    "content_scripts": [
        {
            "run_at": "document_end",
            "matches": ["*://*.reddit.com/*"],
            "js": ["content.bundle.js"]
        }
    ],
    "content_security_policy": "img-src 'self' http://ecx.images-amazon.com/; script-src 'self' 'unsafe-eval'; object-src 'self'"
}